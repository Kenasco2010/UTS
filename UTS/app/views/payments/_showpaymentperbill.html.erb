
<table>
	<tr>
		<th>Bill Status</th>
		<th>Amount Due</th>
		<th>Amount Paid</th>
		<th>Balance</th>
		<th>Payment Date</th>
		<th>Next Date</th>
		<th>Comment</th>
		<th>Paid By</th>
	</tr>

	<% @bill.payments.reverse_each do |payment|  %>
	<tr>
		<td><%= payment.bill_status%></td>
		<td>GH₵<%= payment.amount_due %></td>
		<td>GH₵<%= payment.amount_paid %></td>
		<td>GH₵<%= payment.balance %></td>
		<td><%= payment.date_of_payment %></td>
		<td><%= payment.next_payment_date %></td>
		<td><%= payment.comment %></td>
		<td><%= payment.paid_by %></td>
	</tr>
	<% end %>

</table>

