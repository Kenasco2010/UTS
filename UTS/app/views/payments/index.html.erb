<div class="panel panel-success">
	<div class="panel-heading">
		<h4><u>List of Payments</u></h4>
	</div>
	<div class="panel-body">
		<table>
			<tr>
				<th>Bill Status</th>
				<th>Amount Due</th>
				<th>Amount Paid</th>
				<th>Balance</th>
				<th>Payment Date</th>
				<th>Next Date</th>
				<th>Comment</th>
				<th>Paid By</th>
			</tr>

			<% @payments.reverse_each do |payment| %>
			<tr>
				<td><%= payment.bill_status%></td>
				<td>GH₵<%= payment.amount_due %></td>
				<td>GH₵<%= payment.amount_paid %></td>
				<td>GH₵<%= payment.balance %></td>
				<td><%= payment.date_of_payment %></td>
				<td><%= payment.next_payment_date %></td>
				<td><%= payment.comment %></td>
				<td><%= payment.paid_by %></td>
			</tr>
			<% end %>
		</table>
		<%= paginate @payments %>
		<%= page_entries_info @payments %>
	</div>
</div>
