


<%= form_for @bill, html: {class: "form-horizontal", role: "form"}  do |f| %>
<% if @bill.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@bill.errors.count, "error") %> prohibited
    this bill from being saved:</h2>
    <ul>
      <% @bill.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-lg-4 control-label"%>
    <div class="col-lg-4">
      <%= f.text_field :name,  class: 'form-control', autofocus: true, :placeholder => "Bill Name" %>
    </div>
  </div>

  <div class="form-group">

    <%= f.label :description, class: "col-lg-4 control-label" %>
    <div class="col-lg-4">
      <%= f.text_area :description,  class: 'form-control',  autofocus: true, :placeholder => "Description of Bill", :maxlength=>"300"%>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit class: "btn btn-defalt btn-color"%>
  </div>
  <% end %>


