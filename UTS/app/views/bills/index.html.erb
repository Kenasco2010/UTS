<h1>List of Bills</h1>
<%= link_to 'New Bill', new_bill_path %>

<div  class="jumbotron">
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>

    <% @bill.reverse_each do |bill| %>
    <tr>
      <td><%= bill.name %></td>
      <td><%= bill.description %></td>
      <td><%= link_to 'View', bill_path(bill) %></td>
      <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
      <td><%= link_to 'Delete', bill_path(bill),
        method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </table>
  </div>
