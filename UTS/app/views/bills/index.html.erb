<h1><u>List of Bills</u></h1>
<%= link_to 'New Bill', new_bill_path %>

<div class="panel panel-success">
  <div class="panel-heading">
    LIST OF BILLS
  </div>
  <div class=" panel-body">
    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Action</th>
      </tr>

      <% @bill.reverse_each do |bill| %>
      <tr>
        <td><%= bill.name %></td>
        <td><%= bill.description %></td>
        <td><%= link_to 'View', bill_path(bill) %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'View Payments', bills_payment_path(bill) %>
          <td><%= link_to 'Make Payment', new_payment_path(bill) %></td>
          <td><%= link_to 'Delete', bill_path(bill),
            method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>

          <% end %>
        </table>
        <%= paginate @bill %>
        <%= page_entries_info @bill %>
      </div>
    </div>



    