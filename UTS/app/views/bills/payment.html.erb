<div class="container">
	<div class="col-md-6">
		<div class="panel panel-primary border">
			<div class="panel-heading panel-green">
				<p>BILL</p>
			</div>
			<div class="panel-body">
				<p>
					<strong> Name of Bill:</strong>
					<%= @bill.name %>
				</p>

				<p>
					<strong> Description of Bill:</strong>
					<%= @bill.description %>
				</p>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="panel panel-primary border">
			<div class="panel-heading panel-green">
				<h2>Company to pay Bill to:</h2>
			</div>
			<div class="panel-body">
				

				<% @bill.companies.each do |company|  %>
				<p>
					<strong>Logo:</strong>

					<%= link_to (image_tag company.logo.url(:medium), class: 'logo', :size => "70x70"), [company.bill, company] %>
				</p>
				<p>
					<strong>Name:</strong>
					<%= company.name %>
				</p>
				<p>
					<strong>Address:</strong>
					<%= company.address %>
				</p>
				<p>
					<strong>Contact:</strong>
					<%= company.contact %>
				</p>
				<% end %><!-- <p>
					<%= render @bill.companies %>
				</p> -->
			</div>
		</div>	
	</div>
</div>

<div class="container">
	<h2>Make Payments:</h2>
	<%= render "payments/form" %>

	<%= link_to 'Back', bills_path %> |
	<%= link_to 'Edit', edit_bill_path(@bill) %>
</div>
